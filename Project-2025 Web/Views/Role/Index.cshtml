@model IEnumerable<Project_2025_Web.DTO.RoleDTO>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["mensaje"] != null)
{
    var tipo = TempData["tipo"]?.ToString() ?? "info";
    <div class="alert alert-@tipo alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="mb-3">Roles</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Nuevo Rol</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este rol?');">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

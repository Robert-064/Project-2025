
@model Project_2025_Web.DTOs.PlanDTO

@{
    ViewData["Title"] = "Crear Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Crear Nuevo Plan Turístico</h2>

    <form asp-action="Create" asp-controller="Packages" method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nombre del Plan</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Descripción</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Basic_Price" class="form-label">Precio Básico</label>
            <input asp-for="Basic_Price" type="number" class="form-control" />
            <span asp-validation-for="Basic_Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Type_Difficulty" class="form-label">Dificultad (1 a 5)</label>
            <input asp-for="Type_Difficulty" type="number" class="form-control" />
            <span asp-validation-for="Type_Difficulty" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Max_Persons" class="form-label">Máximo de Personas</label>
            <input asp-for="Max_Persons" type="number" class="form-control" />
            <span asp-validation-for="Max_Persons" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Distance" class="form-label">Distancia (km)</label>
            <input asp-for="Distance" type="number" class="form-control" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile1" class="form-label">Imagen Principal</label>
            <input asp-for="ImageFile1" class="form-control" type="file" accept=".jpg,.jpeg,.png,.gif" />
            <span asp-validation-for="ImageFile1" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile2" class="form-label">Imagen Secundaria</label>
            <input asp-for="ImageFile2" class="form-control" type="file" accept=".jpg,.jpeg,.png,.gif" />
            <span asp-validation-for="ImageFile2" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}

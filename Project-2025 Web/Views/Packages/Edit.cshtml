@model Project_2025_Web.DTOs.PlanDTO

@{
    ViewData["Title"] = "Editar Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Plan Turístico</h2>

    <form asp-action="Edit" asp-controller="Packages" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nombre del Plan</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Descripción</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Basic_Price" class="form-label">Precio</label>
            <input asp-for="Basic_Price" type="number" class="form-control" />
            <span asp-validation-for="Basic_Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Type_Difficulty" class="form-label">Dificultad (1-5)</label>
            <input asp-for="Type_Difficulty" type="number" class="form-control" />
            <span asp-validation-for="Type_Difficulty" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Max_Persons" class="form-label">Máximo de Personas</label>
            <input asp-for="Max_Persons" type="number" class="form-control" />
            <span asp-validation-for="Max_Persons" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Distance" class="form-label">Distancia (km)</label>
            <input asp-for="Distance" type="number" class="form-control" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Imagen Actual 1:</label><br />
            @if (!string.IsNullOrEmpty(Model.ImagePath1))
            {
                            <img src="@Model.ImagePath1" alt="Imagen 1" class="img-thumbnail" width="200" />
            }
            <input asp-for="ImageFile1" type="file" class="form-control mt-2" />
        </div>

        <div class="mb-3">
            <label>Imagen Actual 2:</label><br />
            @if (!string.IsNullOrEmpty(Model.ImagePath2))
            {
                            <img src="@Model.ImagePath2" alt="Imagen 2" class="img-thumbnail" width="200" />
            }
            <input asp-for="ImageFile2" type="file" class="form-control mt-2" />
        </div>

        <button type="submit" class="btn btn-success">Guardar Cambios</button>

        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
                <partial name="_ValidationScriptsPartial" />
}



